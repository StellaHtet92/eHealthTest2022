<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg7">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basicInfo_Registration"
    android:background="@drawable/bg7">
    //Full Name
    <TextView
        android:id="@+id/textView1"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="Full Name:"
        android:textColor="#000000"
        app:layout_constraintRight_toLeftOf="@id/reg_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="24dp"
        android:gravity="left|center"
        />
    <EditText
        android:id="@+id/reg_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="20dp"
        android:hint="Full Name"
        android:inputType="text"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textView1"
        app:layout_constraintTop_toTopOf="parent" />
    //Underlying diseases
    <TextView
        android:id="@+id/textView3"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:text="Underlying Diseases:"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintRight_toLeftOf="@id/chkHCV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        android:gravity="left|center"/>
    <CheckBox
        android:id="@+id/chkHCV"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:text="HCV"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/reg_name"
        app:layout_constraintRight_toLeftOf="@id/textView3"
        app:layout_constraintEnd_toStartOf="@id/chkHCB"/>
    <CheckBox
        android:id="@+id/chkHCB"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:text="HCB"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/reg_name"
        app:layout_constraintRight_toLeftOf="@id/chkHCV"
        app:layout_constraintEnd_toEndOf="parent"/>
    <CheckBox
        android:id="@+id/chkTB"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:text="TB"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/chkHCV"
        app:layout_constraintEnd_toStartOf="@id/chkHIV"/>
    <CheckBox
        android:id="@+id/chkHIV"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:text="HIV"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/chkHCB"
        app:layout_constraintRight_toLeftOf="@id/chkHIV"
        app:layout_constraintEnd_toEndOf="parent"/>
    <CheckBox
        android:id="@+id/chkDiabetes"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Diabetes"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/chkTB"
        app:layout_constraintEnd_toStartOf="@id/chkOthers"/>
    <CheckBox
        android:id="@+id/chkOthers"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="Other"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toBottomOf="@id/chkHIV"
        app:layout_constraintRight_toLeftOf="@id/chkDiabetes"
        app:layout_constraintEnd_toEndOf="parent"/>
    //Allergies
    <TextView
        android:id="@+id/textView4"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:text="Allergies"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/chkDiabetes"
        app:layout_constraintRight_toLeftOf="@id/txt_Allergies"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        />
    <EditText
        android:id="@+id/txt_Allergies"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="70dp"
        android:hint="Example: Pollen"
        android:inputType="text"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chkDiabetes"
        app:layout_constraintRight_toLeftOf="@id/textView4" />
    //Weight
    <TextView
        android:id="@+id/textView5"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:text="Weight in KG:"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintRight_toLeftOf="@id/weight"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        />
    <Spinner
        android:id="@+id/weight"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="70dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_Allergies"
        app:layout_constraintRight_toLeftOf="@id/textView4"
        android:entries="@array/weight"
        android:spinnerMode="dropdown"/>
    //Height
    <TextView
        android:id="@+id/textView6"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:text="Height in CM:"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintRight_toLeftOf="@id/height"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        />
    <Spinner
        android:id="@+id/height"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="70dp"
        android:hint="Example: Pollen"
        android:inputType="text"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weight"
        app:layout_constraintRight_toLeftOf="@id/textView5"
        android:entries="@array/height"
        android:spinnerMode="dropdown"/>
    //Height
    <TextView
        android:id="@+id/textView7"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:text="Smoking Status:"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        app:layout_constraintRight_toLeftOf="@id/rgSmoke"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        />
    <RadioGroup
        android:id="@+id/rgSmoke"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/height"
        app:layout_constraintRight_toLeftOf="@id/textView7"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/rdsmokeYes"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:onClick="onRadioButtonClicked"
            android:text="Yes"
            />
        <RadioButton
            android:id="@+id/rdsmokeNo"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:onClick="onRadioButtonClicked"
            android:text="No"
            />
    </RadioGroup>
    //Allergies
    <TextView
        android:id="@+id/textView8"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:text="Number of Cigarettes per day"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textView7"
        app:layout_constraintRight_toLeftOf="@id/txt_NumCigarette"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        />
    <EditText
        android:id="@+id/txt_NumCigarette"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="70dp"
        android:inputType="number"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rgSmoke"
        app:layout_constraintRight_toLeftOf="@id/textView7" />
    //Next and Back
    <Button
        android:id="@+id/btn_Prev"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="70dp"
        android:enabled="true"
        android:text="@string/action_previous_screen"
        app:layout_constraintTop_toBottomOf="@id/textView8"
        app:layout_constraintRight_toLeftOf="@id/btnBasicInfo_Save"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnBasicInfo_Save"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="70dp"
        android:enabled="true"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_NumCigarette"
        app:layout_constraintRight_toLeftOf="@id/btn_Prev" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBasicInfo_Save"
        android:layout_marginBottom="-4dp"
         />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>